{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es7", "dom", "dom.iterable", "es2016", "es2018.promise"],
    "paths": {
      "@@/*": ["./*"],
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@images/*": ["src/assets/images/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@scripts/*": ["src/scripts/*"]
    },
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "skipLibCheck": true,
    "isolatedModules": false,
    "experimentalDecorators": true
  },
  "include": ["src", "typings"]
}
